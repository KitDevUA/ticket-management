{
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": [
			"node",
			"vite/client"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"preserveValueImports": false,
		"importsNotUsedAsValues": "remove",
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext"
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
