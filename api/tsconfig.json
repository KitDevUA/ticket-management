{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"incremental": true,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false
	},
	"include": [
		"src/**/*",
		"migrations//*",
		"seeders//*"
	],
	"exclude": ["node_modules", "dist"]
}
