{
	"name": "ticket-management-api",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"local": "npm-run-all local:docker:up local:wait local:dev",
		"local:docker:up": "dotenv -e ../.env -- docker-compose -f ../docker/docker-compose.yml up -d",
		"local:docker:down": "dotenv -e ../.env -- docker-compose -f ../docker/docker-compose.yml down --volumes",
		"local:docker:build": "dotenv -e ../.env -- docker-compose -f ../docker/docker-compose.yml build --no-cache",
		"local:add:migration": "dotenv -e ../.env -- npx sequelize-cli migration:generate --name",
		"local:apply:migration": "dotenv -e ../.env -- npx sequelize-cli db:migrate",
		"local:undo:migration": "dotenv -e ../.env -- npx sequelize-cli db:migrate:undo",
		"local:wait": "node --env-file=../.env -e \"require('wait-on')({resources: ['tcp:' + process.env.POSTGRES_PORT]})\"",
		"local:dev": "nest start --watch",
		"local:clean": "npm run local:docker:down && docker volume prune -f",
		"dev": "dotenv -e ../.env -- nest start --watch",
		"start": "node dist/main",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,migrations}/**/*.{ts,js}\" --fix"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.0",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/sequelize": "^11.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"pg": "^8.13.1",
		"pg-hstore": "^2.3.4",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"sequelize": "^6.37.5",
		"sequelize-typescript": "^2.1.6"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.2",
		"@nestjs/devtools-integration": "^0.2.0",
		"@nestjs/schematics": "^11.0.0",
		"@types/express": "^5.0.0",
		"@types/node": "^22.13.1",
		"@types/sequelize": "^4.28.20",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.4.2",
		"sequelize-cli": "^6.6.2",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3",
		"wait-on": "^8.0.2"
	}
}
